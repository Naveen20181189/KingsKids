<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="login.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <title>View Page</title>
</head>
<body>
    <header>
        <div class="delete-method">
            <div class="delete-cond">
                <h3>Do you really want to delete Naveen's Data?</h3>
                <h3>After Deletion, data can't be recovered!</h3>
                <button id="conf-del">Delete</button>
            </div>
        </div>
    </header>
    
    <div class="navbar">
        <div class="logo">
            <h2>King's Kids Educational Society</h2>
        </div>
        <div class="navopt">
            <li class="navlinks"><a href="">Home</a></li>
            <li><a href="/createdata">Create</a></li>
            <li><a href="/logout">Log out</a></li>
        </div>
    </div>

    <div class="datashow">
        <% if (users && users.length > 0) { %>
            <% users.forEach(user => { %>
                <div class="stu-data">
                    <div class="stu-name"><h3><%= user.studentname %></h3></div>
                    <div class="stu-buttons">
                        <a id="update-button" href="/viewdata/<%= user.studentname %>">view</a>
                        
                        <a  href="/update/<%= user.studentname %>" id="update-button">Edit</a>
                        <button onclick="deleteData('<%= user.studentname %>')" id="delete-button">Delete</button>
                    </div>
                </div>
                
            <% }); %>
        <% } else { %> 
            <h1>No data found yet</h1>
        <% } %>
    </div>
    
    <script>
        
        
        function deleteData(docid) {
            if (confirm("Are you sure you want to delete this data?")) {
                fetch(`/delete/${docid}`, {
                    method: 'DELETE'
                })
                .then(response => {
                    if (response.ok) {
                        alert('deletion is not possible');
                    } else {
                        alert('Data is successfully deleted.refresh the page for changes.');
                    }
                    window.location.reload(); // Reload the page after deletion
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Failed to delete data');
                });
            }
        }
    

    </script>
</body>
</html>
